{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@client/vehicles": ["vehicles/vehicle.controller"],
      "@utils/fivem": ["utils/fivem"],
      "@client/peds": ["peds/ped.controller"]
    },
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules"]
}
